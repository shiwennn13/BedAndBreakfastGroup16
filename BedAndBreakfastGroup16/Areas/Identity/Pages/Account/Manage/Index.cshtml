@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Username" class="form-label">Username</label>
                <input asp-for="Username" class="form-control" />
                
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.CustomerName">Full Name</label>
                <input asp-for="Input.CustomerName" class="form-control" aria-required="true" placeholder="Full Name" />
                
                <span asp-validation-for="Input.CustomerName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.CustomerAge">Your Age</label>
                <input asp-for="Input.CustomerAge" class="form-control" aria-required="true" placeholder="21" />
                
                <span asp-validation-for="Input.CustomerAge" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.CustomerAddress">Your Address</label>
                <input asp-for="Input.CustomerAddress" class="form-control" aria-required="true" placeholder="Selangor" />
                
                <span asp-validation-for="Input.CustomerAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.CustomerDoB">Your DoB</label>
                <input asp-for="Input.CustomerDoB" class="form-control" aria-required="true" />
                
                <span asp-validation-for="Input.CustomerDoB" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label">Your Phone Number</label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
