@using Microsoft.AspNetCore.Identity
@using BedAndBreakfastGroup16.Areas.Identity.Data

@inject SignInManager<BedAndBreakfastGroup16User> SignInManager
@inject UserManager<BedAndBreakfastGroup16User> UserManager

<div class="nav-menu top-nav tn-right">
    <nav class="mainmenu">
        <ul>
            @if (SignInManager.IsSignedIn(User))
            {
                <li style="display: inline-block;">
                    <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
                </li>
                <li style="display: inline-block;">
                    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="display: inline;">
                        <button id="logout" type="submit" class="bk-btn">Logout</button>
                    </form>
                </li>
            }
            else
            {
                <li style ="display: inline-block;">
                    <a class="bk-btn" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
                </li>
                <li style="display: inline-block;">
                    <a class="bk-btn" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </li>
            }
        </ul>
    </nav>
</div>

