@model Blogs
@{
    ViewData["Title"] = "editpage";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Edit Blog Details</h2>
                    <div class="bt-option">
                        <a href="/Blogs/Index">Blogs</a>
                        <span>Edit Blog Details</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Contact Section Begin -->
<section class="contact-section spad">
    <div class="container">

        <form method="post" asp-action="updateProcess" asp-controller="Blogs" class="contact-form" enctype="multipart/form-data">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <label asp-for="BlogId">Blog ID:</label>
                    <input asp-for="BlogId" readonly />
                </div>
                <div class="col-lg-12">
                    <label asp-for="BlogTitle">Blog Title:</label>
                    <input asp-for="BlogTitle" />
                    <span asp-validation-for="BlogTitle"></span>
                </div>
                <div class="col-lg-12">
                    <label asp-for="BlogType">Blog Type:</label>
                    <input asp-for="BlogType" />
                    <span asp-validation-for="BlogType"></span>
                </div>
                <div class="col-lg-12">
                    <label asp-for="BlogImage">Blog Image:</label>
                    <input type="file" name="imagefile" accept="image/*" multiple />

                </div>

                <div class="col-lg-12">
                    <label asp-for="BlogDescription">Blog Description:</label>
                    <input asp-for="BlogDescription" />
                    <span asp-validation-for="BlogDescription"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-lg site-btn">Update</button>

                </div>



            </div>


        </form>
    </div>
</section>
<!-- Contact Section End -->
