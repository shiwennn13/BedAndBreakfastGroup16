@model Blogs
@{
    ViewData["Title"] = "AddNewBlog";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Add New Blogs</h2>
                    <div class="bt-option">
                        <a href="/Blogs/Index">Blogs</a>
                        <span>Add New Blogs</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Contact Section Begin -->
<section class="contact-section spad">
    <div class="container">

        <form method="post" asp-action="AddBlog" asp-controller="Blogs" class="contact-form" enctype="multipart/form-data">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <label>Blog Title:</label>
                    <input asp-for="BlogTitle" placeholder="e.g. Discover Kuala Selangor" />
                    <span asp-validation-for="BlogTitle"></span>
                </div>
                <div class="col-lg-12">
                    <label>Blog Type:</label>
                    <input asp-for="BlogType" placeholder="e.g. Travel" />
                    <span asp-validation-for="BlogType"></span>
                </div>
                <div class="col-lg-12">
                    <label>Blog Image:</label>
                    <input type="file" name="imagefile" accept="image/*" multiple />

                </div>

                <div class="col-lg-12">
                    <label>Blog Description:</label>
                    <input asp-for="BlogDescription" placeholder="e.g. Every time I hail a cab in ......" />
                    <span asp-validation-for="BlogDescription"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-lg site-btn">Submit</button>

                </div>



            </div>


        </form>
    </div>
</section>
<!-- Contact Section End -->
