@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section Begin -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="hero-text">
                    <h1>VI Boutique Hotel</h1>
                    <p>
                        Here are the best bed & breakfast booking sites, including recommendations for
                        travel and for finding low-priced rooms in Kuala Selangor.
                    </p>
                    <a href="@Url.Action("AboutUs", "Home")" class="primary-btn">Discover Now</a>
                </div>
            </div>
            
        </div>
    </div>
    <div class="hero-slider owl-carousel">
        <div class="hs-item set-bg" data-setbg="/img/hero/hero-1.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/img/hero/hero-2.jpg"></div>
        <div class="hs-item set-bg" data-setbg="/img/hero/hero-3.jpg"></div>
    </div>
</section>
<!-- Hero Section End -->
<!-- About Us Section Begin -->
<section class="aboutus-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="about-text">
                    <div class="section-title">
                        <span>About Us</span>
                        <h2>Discover Serenity<br />in the Heart of Kuala Selangor</h2>
                    </div>
                    <p class="f-para">
                        At VI, we invite you to take a break from the ordinary. Whether you're on a solo adventure, a romantic getaway, or a family vacation, we promise an experience that will leave you rejuvenated and enriched.
                    </p>
                    <p class="s-para">

                    </p>
                    <a href="/Home/AboutUs" class="primary-btn about-btn">Read More</a>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-pic">
                    <div class="row">
                        <div class="col-sm-6 text-center">
                            <img src="img/about/about-1.jpg" alt="" height="300" width="250">
                        </div>
                        <div class="col-sm-6 text-center">
                            <img src="img/about/about-2.jpg" alt="" height="300" width="250">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- About Us Section End -->
<!-- Services Section Begin -->
<section class="services-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>What We Do</span>
                    <h2>Discover Our Services</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-sm-6">
                <div class="service-item">
                    <i class="flaticon-036-parking"></i>
                    <h4>Travel Plan</h4>
                    <p>
                        Venture into the heart of Kuala Selangor with our curated travel plans. Whether you're a history buff, nature lover, or a food enthusiast, our local experts have crafted the perfect itinerary to ensure you experience the best of what our town has to offer.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6">
                <div class="service-item">
                    <i class="flaticon-033-dinner"></i>
                    <h4>Catering Service</h4>
                    <p>
                        Indulge in a culinary journey with our exquisite catering services. From local delicacies to international cuisines, our chefs use the freshest ingredients to create dishes that tantalize the taste buds and leave a lasting impression.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6">
                <div class="service-item">
                    <i class="flaticon-026-bed"></i>
                    <h4>Room Services</h4>
                    <p>
                        Experience the luxury of dining within the intimate confines of your room. Whether you're craving a sumptuous breakfast in bed, a delectable midnight snack, or a romantic dinner, our extensive menu caters to all your culinary desires.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6">
                <div class="service-item">
                    <i class="flaticon-024-towel"></i>
                    <h4>Laundry</h4>
                    <p>
                        Travel light and worry-free with our prompt laundry services. From delicate fabrics to daily wear, our team ensures your clothes are treated with utmost care, returning them to you fresh and impeccably clean.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6">
                <div class="service-item">
                    <i class="flaticon-044-clock-1"></i>
                    <h4>Hire Driver</h4>
                    <p>
                        Explore Kuala Selangor at your own pace with our reliable driver hire service. Our professional drivers are well-acquainted with the local routes and attractions, ensuring you have a smooth and informative journey.
                    </p>
                </div>
            </div>
            <div class="col-lg-4 col-sm-6">
                <div class="service-item">
                    <i class="flaticon-012-cocktail"></i>
                    <h4>Bar & Drink</h4>
                    <p>
                        Unwind at our in-house bar, where the ambiance is as intoxicating as the drinks. Choose from a wide range of spirits, cocktails, and mocktails, each crafted to perfection. It's the ideal spot to relax after a day of exploration.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
