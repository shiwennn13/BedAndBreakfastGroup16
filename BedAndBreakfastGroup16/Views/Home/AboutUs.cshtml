@{
    ViewData["Title"] = "AboutUs";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>About Us</h2>
                    <div class="bt-option">
                        <a href="/Home/Index">Home</a>
                        <span>About Us</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- About Us Page Section Begin -->
<section class="aboutus-page-section spad">
    <div class="container">
        <div class="about-page-text">
            <div class="row">
                <div class="col-lg-7">
                    <div class="ap-title">
                        <h2>Welcome To VI Boutique Hotel.</h2>
                        <p>
                            Situated in Kuala Selangor city center, VI Boutique Hotel is the perfect place to
                            experience Kuala Selangor and its surroundings. With a wide number of attractions
                            to discover, this sought-after part of town will not cease to amaze you.
                        </p>
                    </div>
                </div>
                <div class="col-lg-4 offset-lg-1">
                    <ul class="ap-services">
                        <li><i class="icon_check"></i> 20% Off On Accommodation</li>
                        <li><i class="icon_check"></i> Complimentary Daily Breakfast</li>
                        <li><i class="icon_check"></i> 24-hour Front Desk</li>
                        <li><i class="icon_check"></i> Free Wifi & Parking</li>
                        <li><i class="icon_check"></i> Daily Housekeeping</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="about-page-services">
            <div class="row">
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg="/img/about/about-1.jpg">
                        <div class="api-text">
                            <h3>Catering Services</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg="/img/about/about-2.jpg">
                        <div class="api-text">
                            <h3>Travel Plan</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="ap-service-item set-bg" data-setbg="/img/about/about-3.jpg">
                        <div class="api-text">
                            <h3>Room Services</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- About Us Page Section End -->
<!-- Video Section Begin -->
<section class="video-section set-bg" data-setbg="/img/video_bg.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="video-text">
                    <h2>Discover Our Hotel & Services.</h2>
                    <p>Where Luxury Meets Serenity - Your Ultimate Escape in Kuala Selangor</p>
                    <a href="https://www.youtube.com/watch?v=3L5Dd8I1mXs" class="play-btn video-popup">
                        <img src="/img/play.png" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Video Section End -->
<!-- Gallery Section Begin -->
<section class="gallery-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Our Gallery</span>
                    <h2>Discover Kuala Selangor</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="gallery-item set-bg" data-setbg="/img/gallery/gallery4.jpg">
                    <div class="gi-text">
                        <h3>Paddy Field</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="gallery-item set-bg" data-setbg="/img/gallery/gallery2.jpg">
                            <div class="gi-text">
                                <h3>Scenes</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="gallery-item set-bg" data-setbg="/img/gallery/gallery-1.jpg">
                            <div class="gi-text">
                                <h3>Sky Mirror</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="gallery-item large-item set-bg" data-setbg="/img/gallery/gallery3.jpg">
                    <div class="gi-text">
                        <h3>Sekinchan</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Gallery Section End -->
