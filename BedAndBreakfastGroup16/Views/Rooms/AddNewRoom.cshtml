@model Rooms
@{
    ViewData["Title"] = "AddNewRoom";
}

<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Add New Rooms</h2>
                    <div class="bt-option">
                        <a href="/Rooms/Index">Rooms</a>
                        <span>Add New Rooms</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Contact Section Begin -->
<section class="contact-section spad">
    <div class="container">

        <form method="post" asp-action="AddRoom" asp-controller="Rooms" class="contact-form" enctype="multipart/form-data">
                <div class="row justify-content-center">
                <div class="col-lg-6">
                    <label>Room Type:</label>
                    <input asp-for="RoomType" placeholder="e.g. Deluxe Twin Room" />
                    <span asp-validation-for="RoomType"></span>
                </div>
                <div class="col-lg-6">
                    <label>Room Image:</label>
                    <input type="file" name="imagefile" accept="image/*" multiple />
                    
                </div>
                <div class="col-lg-6">
                    <label>Room Price:</label>
                    <input asp-for="RoomPrice" placeholder="e.g. 120.99" />
                   <span asp-validation-for="RoomPrice"></span>
                </div>
                <div class="col-lg-6">
                    <label>Room Size (m²):</label>
                    <input asp-for="RoomSize" placeholder="e.g. 22.56" />
                    <span asp-validation-for="RoomSize"></span>
                </div>
                <div class="col-lg-6">
                    <label>Room Capacity (person):</label>
                    <input asp-for="RoomCapacity" placeholder="e.g. 4" />
                    <span asp-validation-for="RoomCapacity"></span>
                </div>
                <div class="col-lg-6">
                    <label>Room Beds:</label>
                    <input asp-for="Bed" placeholder="e.g. One King Size Beds" />
                    <span asp-validation-for="Bed"></span>
                </div>
                <div class="col-lg-12">
                    <label>Room Services:</label>
                    <input asp-for="Services" placeholder="e.g. Wifi, Television, Bathroom,..." />
                    <span asp-validation-for="Services"></span>
                </div>
                <div class="col-lg-12">
                    <label>Room Description:</label>
                    <input asp-for="RoomDescription" placeholder="e.g. The double room includes a private bathroom fitted with a shower......" />
                    <span asp-validation-for="Services"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-lg site-btn">Submit</button>

                </div>



            </div>


        </form>
    </div>
</section>
<!-- Contact Section End -->

