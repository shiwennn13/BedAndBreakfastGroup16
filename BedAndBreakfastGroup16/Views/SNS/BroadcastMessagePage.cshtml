
@{
    ViewData["Title"] = "BroadcastMessagePage";
}
<!-- Breadcrumb Section Begin -->
<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Broadcast Message</h2>
                    <div class="bt-option">
                        <a href="/Home/Index">Home</a>
                        <span>Broadcast Message</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Contact Section Begin -->
<section class="contact-section spad">
    <div class="container">
        <form method="post" asp-action="broadcastmsg" asp-controller="SNS" class="contact-form">
                
                <div class="row justify-content-center">
                    <div class="col-lg-12">
                        <label>Email Subject Title:</label>
                        <input type="text" name="subject" placeholder="e.g. Sample" />
                    </div>
                    <div class="col-lg-12">
                        <label>Email Message Body:</label>
                        <textarea name="msgbody" rows="10" cols="100"></textarea>    
                    </div>
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-lg site-btn">Broadcast Message Now!</button>
                   
                    </div>



                </div>


        </form>
    </div>
</section>
<!-- Contact Section End -->
